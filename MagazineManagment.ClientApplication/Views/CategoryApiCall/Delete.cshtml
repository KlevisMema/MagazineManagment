@using MagazineManagment.DTO.ViewModels
@model CategoryUpdateViewModel
@{
    ViewData["Title"] = "Delete";
}

<style>
  
    .btn-danger{
        background-color: #dc3545;
        color: #fff;
    }
    .btn-danger:hover{
        color:#dc3545;
        background-color:#fff;
        border-color:#dc3545;
    }
</style>

<form asp-action="Delete" asp-controller="CategoryApiCall" method="post" asp-antiforgery="true">
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <h2>Are u sure to delte this record ?  </h2>
        <p>@Model.CategoryName</p>
    </div>
    <input type="hidden" readonly asp-for="Id" />
    <input type="hidden" readonly asp-for="CategoryName" />
    <input type="submit" value="Delete category" class="btn btn-danger" />
    
</form>


