@using MagazineManagment.DTO.ViewModels
@model IEnumerable<CategoryViewModel>
@{
    ViewData["Title"] = "Index";
}

<style>
    .table{
        border: 2px solid #fff;
    }
    .btn-green{
        background-color: green;
        color: #fff;
    }
    .btn-green:hover{
        color:green;
        background-color:#fff;
        border-color:green;
    }
    .btn-danger:hover{
         color:#dc3545;
        background-color:#fff;
    }

</style>


<h2>@ViewBag.Message</h2>


<table class="table table-striped table-dark">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Category name</th>
            <th scope="col">Created on</th>
            <th scope="col">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
        <tr>
            <td>@item.CategoryName</td>
            <td>@item.CreatedOn?.ToString("MMMM dd, yyyy")</td>
            <td>
                    <a asp-action="Edit" asp-controller="CategoryApiCall" asp-route-id="@item.Id" class="btn btn-green">Edit</a> |
                    <a asp-action="Delete" asp-controller="CategoryApiCall" asp-route-id="@item.Id" class=" btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<a asp-controller="CategoryApiCall" asp-action="Create" class="btn btn-primary">Create new category</a>

