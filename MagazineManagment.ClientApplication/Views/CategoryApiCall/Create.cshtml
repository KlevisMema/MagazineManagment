@using MagazineManagment.DTO.ViewModels
@model CategoryCreateViewModel
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" asp-controller="CategoryApiCall" method="post" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CategoryName" ></label>
        <input asp-for="CategoryName" type="text" placeholder="Category Name" class="form-control"/>
        <span asp-validation-for="CategoryName"  class="text-danger"></span>
    </div>
    <br />
    <input type="submit" value="Create category" class="btn btn-primary" />
</form>

