@using MagazineManagment.DTO.ViewModels
@model  IEnumerable<ProductViewModel>

<style>
    .table{
        border: 2px solid #fff;
    }

</style>

<table class="table table-striped table-dark">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Serial number</th>
            <th scope="col">Product name</th>
            <th scope="col">Price</th>
            <th scope="col">Currency type</th>
            <th scope="col">Descriptionn</th>
            <th scope="col">Created on</th>
            <th scope="col">Created by</th>
            <th scope="col">In stock</th>
            <th scope="col">Image</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
        <tr>
            <td>@item.SerialNumber</td>
            <td>@item.ProductName</td>
            <td>@item.Price</td>
            <td>@item.CurrencyType</td>
            <td>@item.ProductDescription</td>
            <td>@item.CreatedOn?.ToString("MMMM dd, yyyy")</td>
            <td>@item.CreatedBy</td>
            <td>@item.ProductInStock</td>
            <td><img src="data:image/png;base64,@item.Image" width="100px" /></td>
            <td>
                    <a asp-action="Edit" asp-controller="ProductApiCall" asp-route-id="@item.Id" class="btn btn-dark">Edit</a> |
                    <a asp-action="Delete" asp-controller="ProductApiCall" asp-route-id="@item.Id" class=" btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<a asp-controller="ProductApiCall" asp-action="Create" class="btn btn-primary">Create new product</a>
