@using MagazineManagment.DTO.ViewModels
@using MagazineManagment.Shared.Enums
@model ProductUpdateViewModel
@{
    ViewData["Title"] = "Delete";
}

<style>
    .form-group-image{
        display: flex;
        align-items: center;
        justify-content:center;
    }
    .form-group-image h1{
        margin:0px 30px;
    }
    .btn-danger{
        background-color: #dc3545;
        color: #fff;
    }
    .btn-danger:hover{
        color:#dc3545;
        background-color:#fff;
        border-color:#dc3545;
    }
    .btn-green{
        background-color: green;
        color: #fff;
    }
    .btn-green:hover{
        color:green;
        background-color:#fff;
        border-color:green;
    }
</style>

<h3>Are you sure to delete this record?</h3>

<form asp-action="Delete" asp-controller="ProductApiCall" method="post" method="post" asp-antiforgery="true">
    <input type="submit" value="Yes" class="btn btn-danger" />
    <a asp-action="Index" asp-controller="ProductApiCall" class="btn btn-green">No</a>
    <br />
    <div asp-validation-summary="ModelOnly" class="text-green"></div>
    <div class="form-group">
        <label asp-for="ProductName" ></label>
        <input readonly asp-for="ProductName" type="text" placeholder="Product Name" class="form-control"/>
        <span asp-validation-for="ProductName"  class="text-danger"></span>
        <label asp-for="SerialNumber" ></label>
        <input readonly asp-for="SerialNumber" type="text" placeholder="Seial Number" class="form-control"/>
        <span asp-validation-for="SerialNumber" class="text-danger"></span>
        <label asp-for="Price" ></label>
        <input readonly asp-for="Price" type="number" placeholder="Price" class="form-control"/>
        <span asp-validation-for="Price" class="text-danger"></span>
        <label asp-for="ProductInStock" ></label>
        <input readonly asp-for="ProductInStock" type="number" placeholder="Product in stock" class="form-control"/>
        <span asp-validation-for="ProductInStock" class="text-danger"></span>
        <div class="form-group-image">
             <img  src="data:image/png;base64,@Model.Image" width="400px" id="img"/>
             <img id="img2"/>
        </div>
        <label asp-for="CreatedBy" ></label>
        <input readonly asp-for="CreatedBy" type="text" class="form-control"/> 
        <span asp-validation-for="CreatedBy" class="text-danger"></span>
    </div>
</form>


