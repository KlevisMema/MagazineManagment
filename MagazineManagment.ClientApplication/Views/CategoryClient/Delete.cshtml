@using MagazineManagment.DTO.ViewModels
@model CategoryViewModel

@{
    ViewData["Title"] = "Delete";
}

<form asp-action="Delete" asp-controller="CategoryClient" method="post" asp-antiforgery="true">
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <h2>Are u sure to delte this record ?  </h2>
        <p>Name : @Model.CategoryName</p>
        <p>Created by : @Model.CreatedBy</p>
        <p>Created : @Model.CreatedOn</p>
    </div>
    <input type="hidden" readonly asp-for="Id" />
    <input type="hidden" readonly asp-for="CategoryName" />
    <input type="submit" value="Delete category" class="btn btn-danger" />
    
</form>