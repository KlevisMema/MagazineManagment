@using MagazineManagment.DTO.ViewModels
@using MagazineManagment.Shared.Enums
@model IEnumerable<ProductViewModel>

<br />
<br />

<div class="table-wrapper">
    <div class="btn-center">
        <a asp-controller="ProductClient" asp-action="Create" class="btn btn-primary ">Create new product</a>
    </div>
    <form asp-action="SearchProduct" asp-controller="ProductClient" method="post">
        <input type="text" placeholder="Enter product name" class="form-input" name="productName" />
        <input type="submit" value="Search" class="submitBtn" />
        <div class="sort">
            <a asp-action="" asp-controller="">Sort by price</a>
            <a asp-action="" asp-controller="">Sort by date created</a>
        </div>
    </form>
    <br />
    <table class="fl-table">
        <thead>
            <tr>
                <th>Serial number</th>
                <th>Product name</th>
                <th>Price</th>
                <th>Currency type</th>
                <th>Description</th>
                <th>Created on</th>
                <th>Created by</th>
                <th>In stock</th>
                <th>Category</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SerialNumber</td>
                    <td>@item.ProductName</td>
                    <td>@item.Price</td>
                    <td>@item.CurrencyType</td>
                    <td>@item.ProductDescription</td>
                    <td>@item.CreatedOn?.ToString("MMMM dd, yyyy")</td>
                    <td>@item.CreatedBy</td>
                    <td>@item.ProductInStock</td>
                    <td>@item.CategoryName</td>
                    <td><img src="data:image/png;base64,@item.Image" width="100px" /></td>
                    <td>
                        <a asp-action="Edit" asp-controller="ProductClient" asp-route-id="@item.Id" class="btn btn-green">Edit</a> |
                        <a asp-action="Delete" asp-controller="ProductClient" asp-route-id="@item.Id" class=" btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        <tbody>
    </table>
</div>