@using MagazineManagment.DTO.ViewModels
@model IEnumerable<ProductsRecordCopyViewModel>
@{
    ViewData["Title"] = "GetChangesMadeByEmployees";
}

<div class="table-wrapper">
    <table class="fl-table">
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Updated by</th>
                <th>Changes in quantity</th>
                <th>When was change made</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.UpdatedBy</td>
                    <td>@item.ChangesInQunatity</td>
                    <td>@item.UpdatedOn</td>
                    <td>
                        <a asp-action="DeleteProductChangeByEmployee" asp-controller="ProductClient" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            }
        <tbody>
    </table>
</div>